<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
        name="books"
        type="com.example.do_an_app.model.books.Result" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        app:cardElevation="4dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/csListBooks"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            >

            <ImageView
                android:id="@+id/imgAvatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                setAvt="@{books.avatar}"
               />

            <TextView
                android:id="@+id/txtNameBooks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imgAvatar"
                android:text="Thám tử lừng danh CONAN"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                setText="@{books.name}"
                android:layout_marginTop="5dp"
                android:textSize="10sp"
                android:fontFamily="@font/sf_pro_semibold"
                />

            <TextView
                android:id="@+id/txtAuthor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtNameBooks"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="kienlt"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="#323232"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                setText="@{books.author}"
                android:textSize="10sp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>