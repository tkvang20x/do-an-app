<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="user"
            type="com.example.do_an_app.model.users.Data" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvtUser"
            setAvt="@{user.avatar}"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/anh_sach"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgChangeAvt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="-25dp"
            android:layout_marginBottom="-10dp"
            android:padding="2dp"
            android:src="@drawable/camera"
            app:layout_constraintBottom_toBottomOf="@id/imgAvtUser"
            app:layout_constraintStart_toEndOf="@id/imgAvtUser" />

        <ImageView
            android:id="@+id/imgSetting"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_baseline_settings_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDescriptionUser"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="100dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgAvtUser" />

        <View
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="#1CE0EA"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDescriptionUser" />

        <TextView
            android:id="@+id/tvUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="20dp"
            android:text="Chỉnh sửa"
            android:textColor="@color/teal_700"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:fontFamily="@font/sf_pro_medium"
            android:drawableStart="@drawable/pencil"
            android:gravity="center_vertical"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/tvInforGeneral"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/boder_text"
            android:text="Thông tin cá nhân"
            android:textColor="@color/black"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line"
            android:fontFamily="@font/sf_pro_medium"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:cardPreventCornerOverlap="false"
            app:contentPadding="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvInforGeneral">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvNameTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvNameTitle"
                    android:id="@+id/imgName"
                    />

                <TextView
                    android:id="@+id/tvNameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Họ và tên: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintStart_toEndOf="@id/imgName"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="10dp"
                    />

                <TextView
                    android:id="@+id/tvNameValue"
                    setText="@{user.name}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:text="Lê Trung Kiên "
                    android:textColor="@color/black"
                    android:fontFamily="@font/sf_pro_medium"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/tvNameTitle"
                    app:layout_constraintTop_toTopOf="parent"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/birthday"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvBirthdayTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvBirthdayTitle"
                    android:id="@+id/imgBirthday"
                    />
                <TextView
                    android:id="@+id/tvBirthdayTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Ngày sinh: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintStart_toEndOf="@id/imgBirthday"
                    app:layout_constraintTop_toBottomOf="@id/tvNameValue"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tvBirthdayValue"
                    setText="@{user.date_of_birth}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="20/07/2000 "
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintBottom_toBottomOf="@id/tvBirthdayTitle"
                    app:layout_constraintStart_toEndOf="@id/tvBirthdayTitle"
                    app:layout_constraintTop_toTopOf="@id/tvBirthdayTitle" />

                <TextView
                    android:id="@+id/tvGenderTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Giới tính: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:gravity="center_vertical"
                    android:drawableStart="@drawable/gender"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvBirthdayValue" />

                <TextView
                    android:id="@+id/tvGenderValue"
                    setGender="@{user.gender}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Nam"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintBottom_toBottomOf="@id/tvGenderTitle"
                    app:layout_constraintStart_toEndOf="@id/tvGenderTitle"
                    app:layout_constraintTop_toTopOf="@id/tvGenderTitle" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/email"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvEmailTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvEmailTitle"
                    android:id="@+id/imgEmail"
                    />
                <TextView
                    android:id="@+id/tvEmailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Email: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintStart_toEndOf="@id/imgEmail"
                    app:layout_constraintTop_toBottomOf="@id/tvGenderValue"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tvEmailValue"
                    setText="@{user.email}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="letrungkien2007@gmail.com"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintBottom_toBottomOf="@id/tvEmailTitle"
                    app:layout_constraintStart_toEndOf="@id/tvEmailTitle"
                    app:layout_constraintTop_toTopOf="@id/tvEmailTitle" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvPhoneTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvPhoneTitle"
                    android:id="@+id/imgPhone"
                    />
                <TextView
                    android:id="@+id/tvPhoneTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="SDT: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintStart_toEndOf="@id/imgPhone"
                    app:layout_constraintTop_toBottomOf="@id/tvEmailValue"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tvPhoneValue"
                    setText="@{user.phone}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="0962983318"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintBottom_toBottomOf="@id/tvPhoneTitle"
                    app:layout_constraintStart_toEndOf="@id/tvPhoneTitle"
                    app:layout_constraintTop_toTopOf="@id/tvPhoneTitle" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/university"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvAddressTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvAddressTitle"
                    android:id="@+id/imgUniversity"
                    />
                <TextView
                    android:id="@+id/tvAddressTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Đại học: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintStart_toEndOf="@id/imgUniversity"
                    app:layout_constraintTop_toBottomOf="@id/tvPhoneValue"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/tvAddressValue"
                    setText="@{user.university}"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Học viện KTMM"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvAddressTitle"
                    app:layout_constraintTop_toTopOf="@id/tvAddressTitle" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/course"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvCourse"
                    app:layout_constraintBottom_toBottomOf="@id/tvCourse"
                    android:id="@+id/imgCourse"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Khóa: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/imgCourse"
                    app:layout_constraintTop_toBottomOf="@id/tvAddressValue"
                    />

                <TextView
                    android:id="@+id/txtCourse"
                    setText="@{user.course}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="CT3"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintBottom_toBottomOf="@id/tvCourse"
                    app:layout_constraintStart_toEndOf="@id/tvCourse"
                    app:layout_constraintTop_toTopOf="@id/tvCourse" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/department"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvDepartment"
                    app:layout_constraintBottom_toBottomOf="@id/tvDepartment"
                    android:id="@+id/imgDepartment"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvDepartment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Phòng ban: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/imgDepartment"
                    app:layout_constraintTop_toBottomOf="@id/tvAddressTitle"
                    />

                <TextView
                    android:id="@+id/txtDepartment"
                    setText="@{user.department}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Phòng Công nghệ thông tin"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintBottom_toBottomOf="@id/tvDepartment"
                    app:layout_constraintStart_toEndOf="@id/tvDepartment"
                    app:layout_constraintTop_toTopOf="@id/tvDepartment" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/specialize"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvSpecialized"
                    app:layout_constraintBottom_toBottomOf="@id/tvSpecialized"
                    android:id="@+id/imgSpecialize"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/tvSpecialized"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="16dp"
                    android:text="Chuyên ngành: "
                    android:textColor="#646464"
                    android:textSize="12sp"
                    android:fontFamily="@font/sf_pro_medium"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@+id/imgSpecialize"
                    app:layout_constraintTop_toBottomOf="@id/tvDepartment" />

                <TextView
                    android:id="@+id/txtSpecialized"
                    setText="@{user.specialized}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Phòng Công nghệ thông tin"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:fontFamily="@font/sf_pro_medium"
                    app:layout_constraintBottom_toBottomOf="@id/tvSpecialized"
                    app:layout_constraintStart_toEndOf="@id/tvSpecialized"
                    app:layout_constraintTop_toTopOf="@id/tvSpecialized" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#7E616161"
            android:visibility="gone"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spin_kit"
                style="@style/SpinKitView.CubeGrid"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                app:SpinKit_Color="#0097D3" />
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
