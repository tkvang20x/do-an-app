<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
        name="bookCount"
        type="com.example.do_an_app.model.chart.BooksCount" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="4dp"
        android:layout_marginTop="2dp"
        app:cardCornerRadius="6dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:id="@+id/csBooks"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:paddingTop="5dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            setAvt="@{bookCount.avatar}"
            app:shapeAppearanceOverlay="@style/roundedImage4"
            />

        <TextView
            android:id="@+id/txtNameBooks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Thám tử lừng danh CONAN"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="#C8000000"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"
            setText="@{bookCount.name}"
            android:textSize="10sp"
            android:textStyle="bold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>